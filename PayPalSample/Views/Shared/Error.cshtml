@model PayPalSample.Models.PayPalViewData
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Error</title>
    <link rel="stylesheet" href="@Url.Content("~/content/site.css")" />
</head>
<body>
    <h1>Error</h1>
    <h2>An error occurred while processing your request.</h2>
    
    @Html.ValidationSummary()
    
    @if (Model != null && Model.ErrorMessage != null){
        <h3>Error message</h3> 
        <p>@Model.ErrorMessage</p>
    }

    @if (Model != null && Model.JsonRequest != null) {
        <h3>JSON Request</h3>
        <pre>@Model.JsonRequest</pre>
    }

    @if (Model != null && Model.JsonResponse != null) {
        <h3>JSON Response</h3>
        <pre>@Model.JsonResponse</pre>
    }
    
    <ul class="menu">
        <li><a href="javascript:window.history.go(-1)">Go back</a></li>
    </ul>
</body>
</html>