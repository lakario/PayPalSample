@model PayPalSample.Models.OrderConfirmedViewData
@{
    ViewBag.Title = "Confirm Your Order";
}

<h2>Confirm Your Order</h2>

<form action="@Url.Action("Capture")" method="post">
    <input type="hidden" name="authorizationId" value="@Model.AuthorizationId" />
    <button type="submit">Finalize Order</button>
</form>

<form action="@Url.Action("Void")" method="post">
    <input type="hidden" name="authorizationId" value="@Model.AuthorizationId" />
    <button type="submit">Void Order</button>
</form>

<ul class="menu">
    <li><a href="@Url.Action("CreatePayment")">Create Payment</a></li>
    <li><a href="@Url.Action("Index")">Start Over</a></li>
</ul>